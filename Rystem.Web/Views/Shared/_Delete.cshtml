@model Rystem.Web.Backoffice.INavigationDelete
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = Model.Title;
}

<h1>@Model.Title</h1>
<h3>@Model.ConfirmDelete</h3>
<div>
    <dl class="row">
        @foreach (var item in Model.Values())
        {
            <dt class="col-sm-2">
                @item.Label
            </dt>
            <dd class="col-sm-10">
                @item.Value
            </dd>
        }
    </dl>
    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="@Model.Id" />
        <input type="submit" value="@Model.Delete" class="btn btn-danger" /> |
        <a asp-action="Index">@Model.BackToList</a>
    </form>
</div>